<Page::Header @title="Customers" />
<Page::Content>
  <div class="d-flex justify-content-between align-content-center mb-3 form-inline">
    <h5 class="card-title">
      {{this.sortedCustomers.length}} Results
    </h5>
    <div>
      <select class="form-control" onchange={{action (mut this.sortProperty) value="target.value"}}>
        <option value="name" selected={{eq this.sortProperty "name"}}>
          Sort by name
        </option>
        <option value="budget" selected={{eq this.sortProperty "budget"}}>
          Sort by budget
        </option>
      </select>
    </div>
    <div>
      <input class="form-control"
        onkeyup={{action (mut this.filterProperty) value="target.value"}}
        onchange={{action (mut this.filterProperty) value="target.value"}}
        placeholder="Filter List" type="text"
      />
    </div>
  </div>
  <div class="card">
    <CustomersTable @model={{this.sortedCustomers}} />
  </div>
</Page::Content>